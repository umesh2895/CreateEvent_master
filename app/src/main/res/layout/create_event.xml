<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:id="@+id/activity_edit_profile"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <EditText
                    android:id="@+id/event_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:maxLength="80"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:minLines="1"
                    android:hint="@string/create_event_name"/>

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/event_loaction_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:clickable="false"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:textColorHint="@color/colorPrimary"
                         android:maxLines="4"
                        android:hint="@string/create_event_location"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/location_button_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_action_location"


                    android:layout_gravity="center_vertical|end"/>

            </LinearLayout>
   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/event_date_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="1"
                        android:textColorHint="@color/colorPrimary"
                        android:clickable="false"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:hint="@string/create_event_date"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_date_picker"
                    android:id="@+id/date_button_id"
                    android:layout_gravity="center_vertical|end"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">
                <EditText
                    android:id="@+id/event_time_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="@string/create_event_time"/>
            </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/time_button_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_time_picker"

                    android:layout_gravity="center_vertical|end"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">

                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/material_spinner1"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Select Category"
                    />

            </android.support.design.widget.TextInputLayout>
</LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <EditText
                    android:id="@+id/event_description_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColorHint="@color/colorPrimary"
                    android:minLines="1"
                    android:imeOptions="actionDone"
                    android:scrollbars="vertical"
                    android:maxLines="4"
                    android:maxLength="300"
                    android:hint="@string/create_event_description"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>